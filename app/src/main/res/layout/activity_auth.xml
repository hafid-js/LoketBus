<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.AuthActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sp_rectangle_gradient_blue_purple"/>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:elevation="0dp"
        app:elevation="0dp"
        android:theme="@style/Theme.AdsAdvance.AppBarOverlay">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:layout_marginStart="19dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:text="Welcome"
            android:textColor="#FFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
        
        <TextView
            android:fontFamily="@font/montserrat"
            android:textSize="11sp"
            android:layout_marginBottom="39dp"
            android:textColor="#FFF"
            android:layout_marginStart="19dp"
            android:text="Silahkan login untuk memulai menggunakan\nsemua fitur di aplikasi ini."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.tabs.TabLayout
            style="@style/TabAuth"
            android:id="@+id/tabs"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="30dp"
            android:paddingStart="16dp
"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sp_rectangle_radius_top_10_white"
            app:tabTextColor="#707070"
            app:tabSelectedTextColor="@color/purple_200"
            app:tabMode="scrollable"
            app:tabIndicatorFullWidth="false"
            android:elevation="0dp"
            app:elevation="0dp"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingTop="36dp"
        android:paddingEnd="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="0.5dp"
        android:clipToPadding="false"
        android:background="@drawable/sp_rectangle_radius_bottom_10_white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>